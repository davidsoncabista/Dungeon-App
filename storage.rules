
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Regras para a biblioteca de mídia da Landing Page
    match /landing-page-media/{imageId} {
      // Permite que qualquer pessoa (logada ou não) leia as imagens.
      // Essencial para que a landing page pública possa exibir as imagens.
      allow get, list: if true;

      // Permite que apenas administradores autenticados possam criar,
      // atualizar ou deletar imagens.
      allow write: if request.auth != null && request.auth.token.role == 'Administrador';
    }
  }
}
