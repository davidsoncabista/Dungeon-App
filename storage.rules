rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /landing-page-media/{imageId} {
      // Qualquer um pode ler as imagens da landing page.
      allow read;

      // Apenas administradores autenticados podem escrever (upload, update, delete).
      // A verificação de 'isAdmin' é feita via custom claims no token de autenticação.
      allow write: if request.auth != null && request.auth.token.role == 'Administrador';
    }
  }
}
