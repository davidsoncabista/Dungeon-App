rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Permite que qualquer pessoa leia as imagens da landing page,
    // mas apenas administradores podem escrever, atualizar ou deletar.
    match /landing-page-media/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}
