rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Funções de Ajuda (Helpers) ---
    // Funções reutilizáveis para manter as regras limpas e fáceis de ler.

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Lê os dados do documento do usuário que está fazendo a requisição.
    // ESSENCIAL para verificar 'role' e 'status' de forma segura.
    function getRequestingUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // --- Funções de Verificação de Papel (Role) ---

    function isAdmin() {
      return isSignedIn() && getRequestingUserData().role == 'Administrador';
    }

    function isEditorOrAdmin() {
      return isSignedIn() && getRequestingUserData().role in ['Administrador', 'Editor'];
    }

    function isRevisorOrHigher() {
      return isSignedIn() && getRequestingUserData().role in ['Administrador', 'Editor', 'Revisor'];
    }

    // --- Função de Validação de Ações de Membro ---
    function canPerformMemberActions() {
      let userData = getRequestingUserData();
      return isSignedIn() && userData.status == 'Ativo' && userData.category != 'Visitante';
    }


    // --- Regras por Coleção ---

    // USUÁRIOS (users)
    match /users/{userId} {
      // Leitura: Qualquer usuário logado pode ler perfis (necessário para listar membros, convidar, etc.).
      allow read: if isSignedIn();
      // Escrita (Update): O próprio usuário pode editar seu perfil, ou um Admin/Editor pode editar qualquer perfil.
      allow update: if isOwner(userId) || isEditorOrAdmin();
      // Criação e Exclusão: Apenas Admins podem criar ou deletar usuários manualmente.
      // (Sua Cloud Function para criar usuários bypassa esta regra, o que é seguro).
      allow create, delete: if isAdmin();
    }

    // REGRAS DE ACESSO (accessRules)
    // Gerenciamento dos papéis do sistema.
    match /accessRules/{ruleId} {
      allow read: if isRevisorOrHigher();
      allow write: if isAdmin();
    }

    // BLOCOS DA LANDING PAGE (landingPageBlocks) - NOVA REGRA
    // Conteúdo da página inicial.
    match /landingPageBlocks/{blockId} {
      // Leitura: Qualquer pessoa pode ler o conteúdo da landing page.
      allow read: if true;
      // Escrita: Apenas administradores podem editar a landing page.
      allow write: if isAdmin();
    }

    // SALAS (rooms)
    match /rooms/{roomId} {
      allow read: if isSignedIn();
      allow write: if isEditorOrAdmin();
    }

    // RESERVAS (bookings)
    match /bookings/{bookingId} {
      allow read: if isSignedIn();
      allow create: if canPerformMemberActions() && isOwner(request.resource.data.organizerId);
      allow update: if canPerformMemberActions() && (
                      // Organizador ou Admin/Editor pode editar
                      isOwner(resource.data.organizerId) || isEditorOrAdmin() ||
                      // Participante pode se remover
                      (isOwner(request.auth.uid) && request.auth.uid in resource.data.participants && !(request.auth.uid in request.resource.data.participants))
                    );
      allow delete: if canPerformMemberActions() && (isOwner(resource.data.organizerId) || isEditorOrAdmin());
    }

    // AVISOS (notices)
    match /notices/{noticeId} {
      allow read: if true; // Avisos são públicos
      allow write: if isAdmin();
    }

    // MENSAGENS DIRETAS (userMessages)
    match /userMessages/{messageId} {
      allow read: if isOwner(resource.data.recipientId) || isAdmin();
      allow update: if isOwner(resource.data.recipientId); // Para marcar como lida
      allow create: if isAdmin();
      allow delete: if false; // Mensagens não devem ser apagadas para manter o histórico
    }

    // VOTAÇÕES (polls)
    match /polls/{pollId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();

      match /votes/{voteId} {
        allow read, create: if isOwner(voteId);
        allow list: if isAdmin(); // Apenas admin pode ver todos os votos
        allow update, delete: if false; // Votos são imutáveis
      }
    }

    // CONFIGURAÇÕES DO SISTEMA (systemSettings)
    match /systemSettings/config {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // PLANOS (plans)
    match /plans/{planId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // TRANSAÇÕES (transactions)
    match /transactions/{transactionId} {
      allow read: if isOwner(resource.data.userId) || isRevisorOrHigher();
      allow write: if isAdmin();
    }
  }
}