rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isUserAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return request.auth.token.role == 'Administrador';
    }

    function isEditor() {
      return request.auth.token.role == 'Editor' || isAdmin();
    }
    
    function isRevisor() {
       return request.auth.token.role == 'Revisor' || isEditor();
    }
    
    function isActiveMember() {
        // Verifica se o usuário tem uma claim de 'Membro' e se não é 'Visitante'
        // Acesso de leitura mais amplo para membros ativos.
        return request.auth.token.role == 'Membro';
    }

    match /users/{userId} {
      allow read: if isUserAuthenticated();
      allow write: if isOwner(userId) || isAdmin();
    }

    match /rooms/{roomId} {
      allow read: if isUserAuthenticated();
      allow create, update, delete: if isEditor();
    }

    match /bookings/{bookingId} {
      allow read: if isUserAuthenticated();
      allow create: if isUserAuthenticated();
      allow update: if isOwner(resource.data.organizerId) || isEditor();
      allow delete: if isOwner(resource.data.organizerId) || isEditor();
    }

    match /plans/{planId} {
      allow read: if isUserAuthenticated();
      allow create, update, delete: if isAdmin();
    }
    
    match /systemSettings/config {
        allow read: if isUserAuthenticated();
        allow write: if isAdmin();
    }
    
    match /notices/{noticeId} {
        allow read: if isUserAuthenticated();
        allow create, update, delete: if isAdmin();
    }
    
    match /transactions/{transactionId} {
        allow read: if isOwner(resource.data.userId) || isAdmin();
        allow create, update, delete: if isAdmin();
    }

    match /userMessages/{messageId} {
      allow read: if isOwner(resource.data.recipientId) || isAdmin();
      allow create: if isAdmin(); // Apenas admin pode criar (enviar)
      allow update(messageId): if isOwner(resource.data.recipientId); // Usuário só pode marcar como lida
      allow delete: if false;
    }

    match /accessRules/{ruleId} {
      allow read: if isRevisor();
      allow create, update, delete: if isAdmin();
    }

    match /polls/{pollId} {
      allow read: if isUserAuthenticated();
      allow create, update, delete: if isAdmin();
    }
    
    match /polls/{pollId}/votes/{voteId} {
       allow read: if isUserAuthenticated();
       allow create: if isUserAuthenticated();
       allow update, delete: if false;
    }
    
    match /landingPageBlocks/{blockId} {
      allow read: if true; // Leitura pública para a landing page
      allow create, update, delete: if isEditor();
    }

    match /auditLogs/{logId} {
      allow read: if isAdmin();
      allow create: if isUserAuthenticated();
      allow update, delete: if false;
    }
  }
}
