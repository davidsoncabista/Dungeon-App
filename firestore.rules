
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Regras para a coleção 'users'
    match /users/{userId} {
      // Leitura: Qualquer usuário autenticado pode ler os perfis (para listar participantes, etc.)
      allow read: if request.auth != null;

      // Criação: A criação é feita via Cloud Function, não diretamente.
      allow create: if false;

      // Atualização:
      // 1. Um usuário pode sempre editar seu próprio documento.
      // 2. Um administrador (com custom claim) pode editar qualquer documento.
      allow update: if request.auth.uid == userId || request.auth.token.admin == true;

      // Exclusão: Apenas administradores podem excluir usuários.
      allow delete: if request.auth.token.admin == true;
    }

    // Regras para a coleção 'rooms'
    match /rooms/{roomId} {
      // Leitura: Qualquer usuário autenticado pode ver as salas.
      allow read: if request.auth != null;

      // Escrita (create, update, delete): Apenas administradores ou editores.
      allow write: if request.auth.token.admin == true || request.auth.token.role == 'Editor';
    }

    // Regras para a coleção 'bookings'
    match /bookings/{bookingId} {
      // Leitura: Qualquer usuário autenticado pode ler as reservas (para a timeline).
      allow read: if request.auth != null;
      
      // Criação:
      // O usuário precisa estar autenticado e ser o organizador da reserva que está criando.
      allow create: if request.auth != null && request.auth.uid == request.resource.data.organizerId;

      // Atualização:
      // 1. O organizador ou um admin/editor pode editar livremente.
      // 2. Um participante pode se remover da lista de 'participants', mas não pode fazer outras alterações.
      allow update: if (request.auth.uid == resource.data.organizerId || request.auth.token.admin == true || request.auth.token.role == 'Editor')
                    || (
                      request.auth.uid in resource.data.participants &&
                      request.resource.data.participants == resource.data.participants.removeAll([request.auth.uid]) &&
                      // Garante que nenhum outro campo foi alterado
                      request.resource.data.diff(resource.data).affectedKeys().hasOnly(['participants'])
                    );
      
      // Exclusão:
      // Permitir a exclusão se o requisitante for o organizador ou um administrador/editor.
      allow delete: if request.auth.uid == resource.data.organizerId || request.auth.token.admin == true || request.auth.token.role == 'Editor';
    }
    
    // Regras para a coleção 'notices'
    match /notices/{noticeId} {
        // Leitura: Qualquer usuário autenticado pode ler os avisos.
        allow read: if request.auth != null;
        
        // Escrita (create, update, delete): Apenas administradores.
        allow write: if request.auth.token.admin == true;
    }
    
    // Regras para a coleção 'plans'
    match /plans/{planId} {
        // Leitura: Qualquer usuário autenticado pode ver os planos.
        allow read: if request.auth != null;
        
        // Escrita: Apenas administradores.
        allow write: if request.auth.token.admin == true;
    }
  }
}
